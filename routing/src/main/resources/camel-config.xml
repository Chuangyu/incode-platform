        <route id="inToOutRoute">
            <from uri="activemq-broker:queue:actionInvocationsQueue"/>
            <unmarshal>
                <jaxb contextPath="org.isisaddons.module.publishmq.dom" prettyPrint="true"/>
            </unmarshal>
            <camel:process ref="addExchangeHeaders"/>

            <camel:choice>
                <camel:when>
                    <camel:simple>${header.actionIdentifier} == 'org.isisaddons.module.publishmq.fixture.dom.PublishMqDemoObject#updateName()'</camel:simple>
                    <log message="updateName() received... ${body}"/>

                    <camel:to uri="stream:out"/>
                    <!--<camel:to uri="cxf:bean:subscriberEndpoint"/>-->
                </camel:when>
                <camel:when>
                    <camel:simple>${header.actionIdentifier} == 'org.isisaddons.module.publishmq.fixture.dom.PublishMqDemoObject#updateDescription()'</camel:simple>
                    <log message="updateDescription() received... ${body}"/>
                    <camel:to uri="stream:out"/>
                    <!--<camel:to uri="cxf:bean:subscriberEndpoint"/>-->
                </camel:when>
            </camel:choice>

        </route>
    </camelContext>

    <bean id="addExchangeHeaders" class="org.isisaddons.module.publishmq.dom.camel.AddExchangeHeaders"/>

    <bean id="enrich" class="org.isisaddons.module.publishmq.routing.EnrichWithCanonicalDto"/>

    <bean id="activemq-broker" class="org.apache.activemq.camel.component.ActiveMQComponent">
        <property name="brokerURL" value="vm://broker?create=false&amp;waitForStart=5000"/>
    </bean>

</beans>
